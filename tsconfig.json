{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2022",
      "outDir": "dist",
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "noErrorTruncation": true,
      "allowJs": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "strictPropertyInitialization": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
    },
    "exclude": ["node_modules"]
  }
  